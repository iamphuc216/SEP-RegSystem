<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.andy.sep.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:layout_marginTop="134dp"
        android:id="@+id/mPassword"
        android:layout_marginStart="37dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AccName"
        android:layout_marginBottom="53dp"
        android:id="@+id/mAccount"
        android:layout_alignBottom="@+id/mPassword"
        android:layout_alignStart="@+id/mPassword" />

    <Button
        android:text="Signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/mPassword"
        android:id="@+id/signUp" />

    <Button
        android:text="Signin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="58dp"
        android:id="@+id/signIn" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="admin1@123.com"
        android:ems="10"
        android:layout_alignBottom="@+id/mPassword"
        android:layout_toEndOf="@+id/signUp"
        android:layout_marginBottom="40dp"
        android:id="@+id/AccountField" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/PasswordField"
        android:layout_alignBaseline="@+id/mPassword"
        android:layout_alignBottom="@+id/mPassword"
        android:layout_alignStart="@+id/AccountField"
        android:text="123123" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Andy"
        android:ems="10"
        android:layout_below="@+id/signUp"
        android:layout_alignStart="@+id/signUp"
        android:layout_marginTop="55dp"
        android:id="@+id/firstName" />

    <Button
        android:text="Update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/updateBtr"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/firstName" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Chen"
        android:ems="10"
        android:id="@+id/lastName"
        android:layout_below="@+id/firstName"
        android:layout_alignStart="@+id/firstName"
        android:layout_marginTop="11dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Where"
        android:ems="10"
        android:layout_alignTop="@+id/firstName"
        android:layout_alignParentEnd="true"
        android:id="@+id/religionField" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignBottom="@+id/lastName"
        android:layout_alignEnd="@+id/PasswordField"
        android:id="@+id/userType"
        android:text="1" />

    <Button
        android:text="Not yet finished survey?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toSurvey"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/mAccount"
        style="@style/Widget.AppCompat.Button.Colored" />

    <Button
        android:text="For demo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/demo"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
