<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.uts.iamjinqianyu.regSystem">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".view.AdminActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".view.EntryActivity"
            android:label="@string/title_activity_entry"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.StudentActivity"
            android:label="@string/title_activity_student"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.ClassEditActivity"
            android:label="@string/title_activity_class_edit"
            android:parentActivityName=".view.AdminActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.uts.iamjinqianyu.regSystem.view.AdminActivity" />
        </activity>
        <activity
            android:name=".view.UserEditActivity"
            android:label="@string/title_activity_user_edit"
            android:parentActivityName=".view.AdminActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.uts.iamjinqianyu.regSystem.view.AdminActivity" />
        </activity>
        <activity
            android:name=".view.ClassDetailActivity"
            android:label="@string/title_activity_class_detail"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>